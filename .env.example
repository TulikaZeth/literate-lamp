# ====================================
# REQUIRED: API Keys
# ====================================
GOOGLE_API_KEY=

EMBEDDING_MODEL=models/sentence-transformers/all-MiniLM-L6-v2


CHAT_MODEL=gemini-1.5-pro

# ====================================
# Document Processing
# ====================================
# Text chunk size (characters)
CHUNK_SIZE=1000

# Overlap between chunks (characters)
CHUNK_OVERLAP=200

# Enable OCR for images and scanned PDFs
USE_OCR=true

# Optional: Path to Tesseract executable (if not in PATH)
# TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# ====================================
# Retrieval & Reranking
# ====================================
# Number of documents to retrieve initially
RETRIEVAL_K=8

# Enable cross-encoder reranking for better accuracy
USE_RERANKER=true

# Number of documents after reranking
RERANKER_TOP_K=4

# ====================================
# Storage
# ====================================
# Directory for ChromaDB persistence
PERSIST_DIR=./chroma_db
